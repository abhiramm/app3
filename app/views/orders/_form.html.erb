
<%= form_for(@order) do |f| %>
<% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :location_id %><br />
    <%= f.collection_select :location_id, Location.all, :id, :name, prompt: true %>
    <%= f.label :performer_id %><br />
    <%= f.grouped_collection_select :performer_id, Location.order(:name), :performers, :name, :id, :first_name, include_blank: true %>
    <%= f.label :clip_category_id %><br />
    <%= f.grouped_collection_select :clip_category_id, Performer.order(:first_name), :clip_categories, :first_name, :id, :name, include_blank: true %>
    <%= f.label :duration_id %><br />
    <%= f.grouped_collection_select :duration_id, Performer.order(:first_name), :durations, :first_name, :id, :time, include_blank: true %>
    <%= f.label :quality_id %><br />
    <%= f.grouped_collection_select :quality_id, Performer.order(:first_name), :qualities, :first_name, :id, :name, include_blank: true %>
    <%= f.label :delivery_time_id %><br />
    <%= f.grouped_collection_select :delivery_time_id, Performer.order(:first_name), :delivery_times, :first_name, :id, :duration, include_blank: true %>
    
    <%# f.label :email%>
    <%# f.text_field :email%>
   </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
